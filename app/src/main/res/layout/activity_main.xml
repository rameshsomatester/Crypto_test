<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="public Key would be here"
            android:textSize="20sp"
            android:id="@+id/TvForKey"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:clickable="true"
            />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:padding="25dp"
            android:id="@+id/EtForCustomer"
            android:hint="Enter text to be encrypted"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/TvForKey"
            android:outlineAmbientShadowColor="@color/colorAccent"
            android:cursorVisible="true"
            android:layout_margin="2dp"
            android:autofillHints="Enter text to be encrypted"
            />


</RelativeLayout>